{
	"name": "iar",
	"displayName": "IAR Embedded Workbench",
	"icon": "icon.png",
	"description": "Provide Intellisense and Build support for IAR Embedded Workbench IDE. Based on extension: https://github.com/politoleo/iar",
	"version": "1.7.0",
	"publisher": "greghoeppner",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:iar.build"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/greghoeppner/iar"
	},
	"main": "./out/main.js",
	"contributes": {
		"commands": [
			{
				"command": "iar.build",
				"title": "IAR: Build Project"
			}
		],
		"keybindings": [
			{
				"command": "iar.build",
				"key": "ctrl+shift+B",
				"when": "!inDebugMode && config.iar.enabled"
			}
		],
		"configuration": {
			"type": "object",
			"title": "IAR Configuration",
			"properties": {
				"iar.enabled": {
					"type": "boolean",
					"default": false,
					"description": "Enable IAR extension."
				},
				"iar.verbose": {
					"type": "boolean",
					"default": false,
					"description": "Enable verbose output in the IAR terminal."
				},
				"iar.settings": {
					"type": "object",
					"description": "The configuration options",
					"properties": {
						"path": {
							"type": "string",
							"description": "The path of the IAR Embedded Workbench",
							"default": "C:\\Program Files (x86)\\IAR Systems\\Embedded Workbench 8.2\\"
						},
						"project": {
							"type": [
								"string",
								"null"
							],
							"description": "The path of the IAR project file (project.ewp)",
							"default": "${workspaceFolder}\\project.ewp"
						},
						"config": {
							"type": [
								"string",
								"null"
							],
							"description": "The name of the default configuration to build with (eg. Debug)",
							"default": "Debug"
						}
					},
					"default": {
						"path": "C:\\Program Files (x86)\\IAR Systems\\Embedded Workbench 8.2\\",
						"project": null,
						"config": null
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/xml2js": "^0.4.5",
		"xml2js": "^0.4.23"
	}
}
